<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update User</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div class="update-user-container">
    <form action="/update-user" method="POST">
      <div>
        <label for="">First Name:</label>
        <input name="firstName" value="<%= dataUser.firstName %>" id="" />
      </div>
      <div>
        <label for="">Last Name:</label>
        <input name="lastName" value="<%= dataUser.lastName %>" id="" />
      </div>
      <div>
        <label for="">Email:</label>
        <input name="email" value="<%= dataUser.email %>" id="" />
      </div>
      <div>
        <label for="">Address:</label>
        <input name="address" value="<%= dataUser.address %>" id="" />
      </div>
      <input type="text" value="<%= dataUser.id %>" hidden name="id">
      <div>
        <button type="submit" class="btn-save">Save</button>
      </div>
    </form>
  </div>
</body>
</html>